                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <!-- Generaci칩n del cliente JAX-WS a partir de la wsdl-->
            <plugin>
                <groupId>org.jvnet.jax-ws-commons</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <packageName>ar.org.hiba.discomun.ws.webservicemfturnos.client</packageName>
                    <wsdlDirectory>${basedir}/src/main/resources/META-INF/wsdl</wsdlDirectory>
                    <wsdlLocation>http://turnos/wsdl/WebServiceTurnos.wsdl</wsdlLocation>
                </configuration>
            </plugin>
            
            <!-- Ejemplo para excluir tests -->
